<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Texts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --verde-primario: #2c5e50;
            --verde-secundario: #4b8b7d;
            --cinza-claro: #e0e0e0;
            --cinza-escuro: #333333;
            --preto: #1a1a1a;
            --amarelo: #f0c14b;
            --marrom-claro: #d7b89c;
        }
        
        body {
            background-color: var(--cinza-claro);
            color: var(--preto);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        
        .container {
            background-color: white;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: 30px;
            margin-bottom: 30px;
        }
        
        h1 {
            color: var(--verde-primario);
            font-weight: 600;
            border-bottom: 2px solid var(--marrom-claro);
            padding-bottom: 10px;
        }
        
        .btn-success {
            background-color: var(--verde-primario);
            border-color: var(--verde-primario);
        }
        
        .btn-success:hover {
            background-color: var(--verde-secundario);
            border-color: var(--verde-secundario);
        }
        
        .table {
            border-radius: 8px;
            overflow: hidden;
        }
        
        .table-dark {
            background-color: var(--verde-primario) !important;
        }
        
        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(75, 139, 125, 0.1);
        }
        
        .table-striped tbody tr:hover {
            background-color: rgba(75, 139, 125, 0.2);
        }
        
        .btn-primary {
            background-color: var(--verde-secundario);
            border-color: var(--verde-secundario);
        }
        
        .btn-primary:hover {
            background-color: var(--verde-primario);
            border-color: var(--verde-primario);
        }
        
        .btn-warning {
            background-color: var(--amarelo);
            border-color: var(--amarelo);
            color: var(--preto);
        }
        
        .btn-warning:hover {
            background-color: #e0b040;
            border-color: #e0b040;
            color: var(--preto);
        }
        
        .btn-danger {
            background-color: #c4554d;
            border-color: #c4554d;
        }
        
        .btn-danger:hover {
            background-color: #b04a42;
            border-color: #b04a42;
        }
        
        th {
            font-weight: 500;
        }
        
        .btn-sm {
            padding: 0.25rem 0.5rem;
            font-size: 0.875rem;
        }
        
        .form-control:focus {
            border-color: var(--verde-secundario);
            box-shadow: 0 0 0 0.25rem rgba(44, 94, 80, 0.25);
        }
        
        .navbar-custom {
            background-color: var(--verde-primario);
        }
        
        .footer-custom {
            background-color: var(--verde-primario);
            color: white;
            padding: 20px 0;
            margin-top: 30px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom mb-4">
        <div class="container">
            <a class="navbar-brand" href="#">Text Manager</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Sobre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Contato</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        <h1 class="mb-4">Lista de Texts</h1>
        <a href="/texts/new" class="btn btn-success mb-3">Novo Text</a>
        
        <table class="table table-striped">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Email</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% texts.forEach(text => { %>
                    <tr>
                        <td><%= text.id %></td>
                        <td><%= text.name %></td>
                        <td><%= text.telefone %></td>
                        <td><%= text.email %></td>
                        <td>
                            <a href="/texts/<%= text.id %>" class="btn btn-primary btn-sm">View</a>
                            <a href="/texts/<%= text.id %>/edit" class="btn btn-warning btn-sm">Edit</a>
                            <form action="/texts/<%= text.id %>?_method=DELETE" method="POST" style="display: inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <footer class="footer-custom">
        <div class="container text-center">
            <p class="mb-0">© 2023 Text Manager - Todos os direitos reservados</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>